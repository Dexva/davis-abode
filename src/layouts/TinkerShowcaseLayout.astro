---
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import Prose from '../components/Prose.astro';

const { frontmatter } = Astro.props;
const returnMessage = "<<";

let scale = frontmatter.image.scale;
let width = frontmatter.image.width * scale;
let height = frontmatter.image.height * scale;
---
<style>
    .return {
        cursor: pointer;
    }
    .melink {
        border: 1px solid var(--flamingo);
        color: var(--flamingo);
        margin-bottom:5%;
        display: inline-block;
        cursor: ne-resize
    }
    .melink:hover {
        background-color:var(--mainred);
        color:var(--bgwhite);
        border: 0px;
    }

</style>

<BaseLayout pageTitle = {frontmatter.title}>
    <p class="text-flamingo font-bold hover:[text-shadow:0_2px_10px_var(--color-flamingo)] noselect"><a class="return" href="/tinker/">{returnMessage}</a></p>
    <div class="flex flex-col md:flex-row justify-around">
        <div class="flex md:max-w-[50%] flex-col">
            <Prose>
                <slot/>
            </Prose>
        </div>
        <div class="flex flex-col items-center">
            <Image src={frontmatter.image.url} alt={frontmatter.image.alt} width={width} height={height}/>
            {frontmatter.linkText && <div class="mt-4 p-2 rounded-xl noselect floating border-1 text-flamingo hover:text-bg1 hover:bg-flamingo">
                <p>
                <a href={frontmatter.externalURL} target="_blank">{frontmatter.linkText}</a>
                </p>
            </div>}
        </div>
    </div>
</BaseLayout>

