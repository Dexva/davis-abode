---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Images from './photos/list.json';

let id = "1x5N3VfoevTV6EOEp_aw1qYN3jzFjbILw";
let url = "https://drive.google.com/uc?id=1x5N3VfoevTV6EOEp_aw1qYN3jzFjbILw&export=download";
---

<style>
    .photocontainer {
        margin-top: 5%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        flex-wrap: wrap;
        gap: 10px; 
        width: 100%;  
    }
    .imglink {
        display: inline-block;
        width:40%;
        max-height: 300px;
        overflow:hidden;
        padding: 0px;
        opacity: 0.4;
    }
    .imglink:hover {
        opacity: 1;
    }
    .img {
        display:block;
        width: 100%;
        height: auto;
        object-fit:cover;
    }
    .imgtitle {
        position: relative;  /* Position the title over the image */
        color: white; /* Make the title text white */
        font-size: 1.5rem;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Add text shadow for better visibility */
        z-index: 1; /* Ensure the text is above the image */
    }
    @media screen and (min-width:636px) {
        .imglink {
            width: 30%;
        }
    }
</style>

<BaseLayout pageTitle="photos">
    <h2 class="nomargin">写真</h2>
    <h1 class="nomargin">scenery-catching</h1>
    <div class="photocontainer">
        {Images.map((image)=>(
            <a class="imglink floating" href={image.externalURL} target="_blank">
                {/* <p class="imgtitle">{image.title}</p> */}
                <img class="img" src={image.imgURL} alt={image.title} />
            </a>
        ))}
    </div>
</BaseLayout>

