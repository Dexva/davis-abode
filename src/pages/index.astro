---
import BaseLayout from '../layouts/BaseLayout.astro';
import TextLink from '../components/TextLink.astro';

const foreword = "hi, i'm";
const name = "davis!";
---

<style>
	.container {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100vh;;
	}
	h1, p {
		padding:0;
		margin:0;
		text-align:center;
	}

	.foreword {
		font-weight:300;
		font-size:280%;
		padding-bottom: 0%;
	}
	.name {
		margin-top: -30px;
		font-weight:900;
		font-size: 500%;
		background-image: linear-gradient(red, #ffa3a3);
    	color: transparent;
    	background-clip: text;
	}
	.subtext {
		padding-top: 2em;
		font-size:110%;
	}

	@media screen and (min-width: 636px) {
		br {
			display: unset;
		}
	}
</style>

<BaseLayout pageTitle="">
	<div class="container">
		<h1 class="foreword noselect">{foreword}</h1>
		<h1 class="name noselect">{name}</h1>

		<p class="subtext">
			I am a Filipino <TextLink url="/me" text="international student" isBold={true}/>
			based in Kyoto.

			<br class="hide"/>
			an avid <TextLink url="/thoughts" text="sinigang eater" isBold={true}/>,
			and a <TextLink url="/photos" text="scenery catcher" isBold={true}/>.
			
			<br/><br/>
			
			„Çà„ÅÜ„Åì„Åù üëã
		</p>
	</div>
</BaseLayout>

