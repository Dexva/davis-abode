---
import '../styles/global.css';
const { title , subtitle, route, thumbnail } = Astro.props;
---

<style>
    .tab {
        margin-bottom:10px;
        padding:2%;
        border: 2px solid var(--mainblack);
        border-radius:20px;
        opacity:0.4;
        background-color:transparent;
    }
    .tab h3 {
        font-weight:bold;
    }
    .tab a:hover {
        background-color:transparent;
    }
    .tab:hover {
        opacity: 0.8;
    }
    .tab a:active{
        color: var(--mainred);
    }
    .tab img {
        max-width: 500px;
        height: 30px;
        overflow:hidden;
    }

</style>

<div class="tab floating">
    <a href={route}>
        <img src={thumbnail}>
        <h3 class="nomargin noselect">{title}</h3>
        <p class="nomargin noselect">{subtitle}</p>
    </a>
</div>